{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PruebaClean": "Server=(localdb)\\MSSQLLocalDB;Database=PruebaClean;Trusted_Connection=True;Encrypt=False;TrustServerCertificate=True"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Enrichers.ClientInfo" ],
    "MinimumLevel": "Information",
    "Enrich": [ "FromLogContext", "WithClientIp", "WithUserClaims" ],
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "PruebaClean",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "autoCreateSqlTable": true
          },
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "additionalColumns": [
              {
                "ColumnName": "ClientIp",
                "PropertyName": "ClientIp",
                "DataType": "nvarchar",
                "DataLength": 64,
                "AllowNull": true
              }
            ]
          }
        }
      }
    ]
  }
}